<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:IotProject.ViewModels;assembly=IotProject"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="IotProject.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        FontSize="40"
        Title="IotProject">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,Auto,Auto,Auto,*"  Margin="4">

    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding TimeOfDay}"/>

  </Grid>
  </Window>
